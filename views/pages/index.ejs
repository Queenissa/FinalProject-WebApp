<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<style>
.container{
    margin-top: .5in;
} 

a {
  text-decoration: none;
}

a:hover {
  text-decoration: none;
}

h3 {
  line-height: 3em;
}

.card {
  max-width: 16rem;
}

.card:hover {
  box-shadow: 1px 2px 10px plum;
  transition: 0.2s;
  background: pink;
}

.card-header {
  font-size: 13px;
  color: gray;
  background-color: white;
}

.text-muted {
  font-size: 11px;
}

.card-footer{
  font-weight: bold;
  font-size: 18px;
  background-color: white;
}

.name{
    color: purple;
}

h5{
    font-size: 50px;
}

.image{
    height: 700px;
}


</style>
<body>
    <%- include('./../partials/header') -%>


    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/public/images/black-pink.jpg" class="d-block w-100 h-6 image" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>Shop Now</h5>
                
              </div>
          </div>
          <div class="carousel-item">
            <img src="/public/images/bts.jpg" class="d-block w-100 h-6" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/public/images/twice.jpg" class="d-block w-100 h-6" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>










    <div class="container">
        <h3 class="mb-4">Categories</h3>
        <div class="card-deck">
          <div class="card text-center">
              <img class="card-img-top" src="/public/images/bag.jpg" alt="Card image">
              <div class="card-body">
                <a href="#"><h5 class="name">Bags</h5></a>
              </div>
            </a>
          </div>


          <div class="card text-center">
            <img class="card-img-top" src="/public/images/shirt.jpg" alt="Card image">
            <div class="card-body">
              <a href="#"><h5 class="name">T-Shirts</h5></a>
            </div>
          </a>
        </div>


        <div class="card text-center">
            <img class="card-img-top" src="/public/images/cap.jpg" alt="Card image">
            <div class="card-body">
              <a href="#"><h5 class="name">Caps</h5></a>
            </div>
          </a>
        </div>

        <div class="card text-center">
            <img class="card-img-top" src="/public/images/shoes.jpg" alt="Card image">
            <div class="card-body">
              <a href="#"><h5 class="name">Shoes</h5></a>
            </div>
          </a>
        </div>


        <div class="card text-center">
            <img class="card-img-top" src="/public/images/jacket.jpg" alt="Card image">
            <div class="card-body">
              <a href="#"><h5 class="name">Jackets</h5></a>
            </div>
          </a>
        </div>



        </div>
      </div>



</body>
</html>